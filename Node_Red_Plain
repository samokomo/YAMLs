---
version: "2.0"
services:
  app:
    image: ubuntu:latest
    env:
      - 'SSH_PUBKEY=ssh-rsa AA...****' # Paste your SSH public key from PuTTyGen here
    command:
      - "bash"
      - "-c"
    args:
      - 'apt-get update;
         apt-get install -y --no-install-recommends -- ssh;
         apt-get update;
         apt-get install -y -- apache2;
         apt-get install -y curl;
         curl -sL https://deb.nodesource.com/setup_lts.x | bash -;
         apt-get install -y --nodejs;
         apt-get install nodejs -y;
         apt-get install npm;
         npm install -g --unsafe-perm pm2;
         mkdir -p -m0755 /run/sshd;
         mkdir -m700 ~/.ssh;
         echo "$SSH_PUBKEY" | tee ~/.ssh/authorized_keys;
         chmod 0600 ~/.ssh/authorized_keys;
         ls -lad ~ ~/.ssh ~/.ssh/authorized_keys;
         md5sum ~/.ssh/authorized_keys;
         npm install -g --unsafe-perm node-red;
         pm2 start /usr/local/bin/node-red --name "node-red";
         pm2 start node-red;
         npm -v;
         node-red --version;
         exec /usr/sbin/sshd -D'
    expose:
      - port: 80
        as: 80
        to:
          - global: true
      - port: 22
        as: 22
        to:
          - global: true
      - port: 1880
        as: 1880
        to:
          - global: true
profiles:
  compute:
    app:
      resources:
        cpu:
          units: 1
        memory:
          size: 1Gi
        storage:
          - size: 10Gi
  placement:
    akash:
      pricing:
        app:
          denom: uakt
          amount: 10000
deployment:
  app:
    akash:
      profile: app
      count: 1
